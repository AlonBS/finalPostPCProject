<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="#FF111111"
        android:gravity="top"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/deal_layout"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/likes_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/remove_deal_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_action_discard" >
                </ImageView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_action_bad" >
                    </ImageView>

                    <TextView
                        android:id="@+id/num_of_dislikes_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="0"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_action_good" >
                    </ImageView>

                    <TextView
                        android:id="@+id/num_of_likes_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="0"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/likes_layout"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/your_deal_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:padding="3dp"
                    android:gravity="center"
                    android:text="@string/your_deal"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16sp" />

                <ScrollView
                    android:id="@+id/your_deal_scroll_view"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/deal_body_background"
                    android:clickable="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:scrollbars="vertical" >

                    <TextView
                        android:id="@+id/deal_tv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:padding="5dp"
                        android:text="@string/tap_to_enter_deal"
                        android:textColor="#FFFFFFFF"
                        android:textSize="15sp" />
                </ScrollView>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:background="#FF000000"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:background="#FF222222" />

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp" >

                    <ImageView
                        android:id="@+id/buisness_image_view"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/black_image"
                        android:visibility="invisible" >
                    </ImageView>

                    <ProgressBar
                        android:id="@+id/load_image_progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/top_businesses_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/top_businesses"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp" />

            <com.dna.radius.businessmode.TopBusinessesHorizontalView
                android:id="@+id/top_businesses_list_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="#00000000" >

                <LinearLayout
                    android:id="@+id/top_businesses_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >
                </LinearLayout>
            </com.dna.radius.businessmode.TopBusinessesHorizontalView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/top_businesses_layout"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:background="@color/gray"
                android:gravity="center"
                android:text="@string/comments"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp" />

            <ListView
                android:id="@+id/comments_list_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="#00000000" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
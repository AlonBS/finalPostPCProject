<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/deal_hist_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bordered_shape"
            android:padding="2dp" >

            <TextView
                android:id="@+id/deal_hist_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_ab_bottom_solid_dark_holo"
                android:gravity="center"
                android:padding="4dp"
                android:text="drogba"
                android:textColor="#FFFFFFFF"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/deal_hist_data_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A3C1AD"
                android:gravity="center"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
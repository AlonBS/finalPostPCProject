<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout 
        android:orientation="vertical"
            android:layout_width="match_parent"
   			android:layout_height="match_parent">
   <!-- <LinearLayout 
        android:orientation="horizontal"
            android:layout_width="match_parent"
   			android:layout_height="0dp"
   			android:layout_weight="0.1">

     <ProgressBar
		android:id="@+id/address_progress"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:indeterminate="true"
		android:visibility="gone" />
     </LinearLayout>  -->
     
        <LinearLayout 
        android:orientation="horizontal"
            android:layout_width="match_parent"
   			android:layout_height="wrap_content"
   			android:layout_weight="0.1"
   			android:background="@color/gray">

     
     <Spinner
    android:id="@+id/filter_spinner"
    android:layout_width="0dp"
    android:layout_weight="0.5"
    android:entries="@array/spinner_options"
    android:layout_height="match_parent" />
     
     <ImageView
         android:id="@+id/resturant_filter_btn"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="0.1"
         android:src="@drawable/resturant_icon" />
    <ImageView
         android:id="@+id/pub_filter_btn"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="0.1"
         android:src="@drawable/bar_icon" />
     <ImageView
         android:id="@+id/hotel_filter_btn"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="0.1"
         android:src="@drawable/hotel_icon" />
     
     <ImageView
         android:id="@+id/shopping_filter_btn"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="0.1"
         android:src="@drawable/shopping_icon" />
     
          <ImageView
         android:id="@+id/coffee_filter_btn"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="0.1"
         android:src="@drawable/coffee_icon" />
     </LinearLayout>
	
	<fragment
          android:id="@+id/map"
          android:layout_weight="0.9"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:name="com.google.android.gms.maps.MapFragment"/>
	
	
	</LinearLayout>
</RelativeLayout>
